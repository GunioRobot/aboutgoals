<h1>Listing Agilezen::tasks</h1>

<table>
  <tr>
    <th>External</th>
    <th>Source</th>
  </tr>

<% @agilezen_tasks.each do |task| %>
  <tr>
    <td><%=h task.external_id %></td>
    <td><%= link_to( task.source.name, agilezen_source_path(task.source) ) unless task.source.nil? %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

