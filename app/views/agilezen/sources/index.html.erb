<h1>Listing sources</h1>

<table>
  <tr>
    <th>Api key</th>
    <th>Project</th>
    <th>Name</th>
  </tr>

<% @agilezen_sources.each do |source| %>
  <tr>
    <td><%=h source.api_key %></td>
    <td><%=h source.project %></td>
    <td><%=h source.name %></td>
    <td><%= link_to 'Show', source %></td>
    <td><%= link_to 'Edit', edit_agilezen_source_path(source) %></td>
    <td><%= link_to 'Destroy', source, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New source', new_agilezen_source_path %>