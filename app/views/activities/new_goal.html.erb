<%= render :partial => 'goals/about' -%>

<h1>New goal</h1>

<% form_for(@goal, :url => create_goal_activity_path(@activity) ) do |f| %>
  <%= f.error_messages %>

  <%= render :partial => 'goals/form', :locals => {:f => f} -%>

  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', @activity %>
