<h1>Show goal</h1>

<table>
	<tr><td>Name</td><td><%= @goal.name %></td></tr>
	<tr><td>Detail</td><td><%= @goal.detail %></td></tr>
	<tr><td>Complete</td><td><%= @goal.complete? %></td></tr>
	<tr><td>Status</td><td><%= status_text(@goal) %></td></tr>
<table>
	
<h1>Tasks</h1>

<table>
	
  <%= render :partial => 'tasks/header' %>
  <%= render :partial => 'tasks/row', :collection => @goal.tasks, :as => :task %>

</table>


<%= link_to 'Edit', edit_goal_path(@goal) %> |
<%= link_to 'Back', goals_path %>
