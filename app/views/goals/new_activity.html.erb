<%= render :partial => 'activities/about' -%>

<h1>New activity</h1>

<% form_for(@activity, :url => create_activity_goal_path(@goal) ) do |f| %>
  <%= f.error_messages %>

  <%= render :partial => 'activities/form', :locals => {:f => f} -%>

  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', @goal %>
